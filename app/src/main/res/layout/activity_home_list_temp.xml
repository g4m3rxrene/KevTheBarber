<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#363636"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/contact_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/date"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#84C9FB"
            android:textSize="25sp"
            tools:text="Contact Name" />

        <TextView
            android:id="@+id/contact_phone"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/contact_name"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="067 137 1426"
            android:textColor="#84C9FB"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/contact_phone"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:id="@+id/contact_email"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#84C9FB"
            android:layout_marginTop="2dp"
            android:textAlignment="textStart"
            tools:text="blankatrene@gmail.com"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/date"
            app:layout_constraintBaseline_toBaselineOf="@+id/contact_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            tools:text="31/10/2002"
            android:textColor="#84C9FB"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>